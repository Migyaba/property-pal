# =============================================================================
# CONFIGURATION DJANGO - EXEMPLE
# =============================================================================
# Copiez ce fichier en ".env" et modifiez les valeurs selon votre environnement

# Clé secrète Django (générez-en une unique pour la production)
# Utilisez: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production

# Mode debug (False en production)
DEBUG=True

# Hôtes autorisés (séparez par des virgules)
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# BASE DE DONNÉES POSTGRESQL
# =============================================================================

DB_NAME=immogest_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
